<p id="notice"><%= notice %></p>

<h1>Loans</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Book</th>
      <th>Borrow date</th>
      <th>Return date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td> <%= link_to user_path(loan.user) do %>
                <%= loan.user.firstname %> <%= loan.user.lastname %>
              <% end %>
        </td>
        <td><%= loan.book.title %></td>
        <td><%= loan.borrow_date %></td>
        <td><%= loan.return_date %></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if loan.active? %>
          <td><%= link_to 'Return book', edit_loan_path(loan) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

